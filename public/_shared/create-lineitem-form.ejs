<form action="/bgi/create-lineitem.cgi" method="POST">
	<fieldset>
		<legend>Time of Purchase</legend>
		<input type="date" name="lineitemdate">
		<input type="time" name="lineitemtime" step="1" />
		<script type="text/javascript">
			var datetime = new Date()
			document.getElementsByName("lineitemtime")[0].valueAsDate = datetime
			var t = document.getElementsByName("lineitemtime")[0].value.split(":")
			document.getElementsByName("lineitemtime")[0].value = t[0] + ":" + t[1]
			document.getElementsByName("lineitemdate")[0].valueAsDate = datetime
		</script>
	</fieldset>
	<select name="accountname"><!-- Populated by JS--></select>
	<input placeholder="Item Name" maxlength="64" required="required" name="name" type="text" pattern="[^0-9]+" title="You must enter an alphabetical name" />
	<input placeholder="Amount" name="amount" required="required" type="text" pattern="[-]?[0-9]+\.[0-9]{2}?" title="please enter a valid dollar amount" />
	<input placeholder="Latitude" name="latitude" value="44.4758" type="text" pattern="[-]?[0-9]+\.[0-9]+" title="Please enter a valid latitude">
	<input placeholder="Longitude" name="longitude" value="-73.2119" type="text" pattern="[-]?[0-9]+\.[0-9]+" title="Please enter a valid longitude">
	<input type="submit" value="Create Item" />
</form>